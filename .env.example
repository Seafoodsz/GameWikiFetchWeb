# Wiki URL (必填)
WIKI_URL=https://example-game.fandom.com

# 本地保存目录 (必填)
OUTPUT_DIR=./wiki_data

# 抓取深度 (可选，默认为3)
MAX_DEPTH=3

# 是否下载图片 (可选，默认为True)
DOWNLOAD_IMAGES=True

# 是否下载表格 (可选，默认为True)
DOWNLOAD_TABLES=True

# 自定义User-Agent (可选)
USER_AGENT=GameWikiFetcher/1.0

# 请求延迟(秒) (可选，默认为1)
DELAY=1

# 并发下载线程数 (可选，默认为3)
THREADS=3

# 是否保存原始HTML (可选，默认为False)
SAVE_HTML=False

# 日志级别 (可选，默认为INFO)
LOG_LEVEL=INFO 